                                    </dxlc:LayoutItem>
                                    <dxlc:LayoutItem Label="State:" HorizontalAlignment="Right">
                                        <dxe:TextEdit Width="40" />
                                    </dxlc:LayoutItem>
                                </dxlc:LayoutGroup>
